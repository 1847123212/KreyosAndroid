        <activity
            android:name="com.kreyos.watch.WebBadgesActivity"
            android:screenOrientation="portrait" 
            android:windowSoftInputMode="stateHidden">
        </activity>
        
        <activity
            android:name="com.kreyos.watch.NotificationsActivity"
            android:screenOrientation="portrait"      
            android:windowSoftInputMode="stateHidden">
        </activity>
        
        <activity
            android:name="com.kreyos.watch.ActivityStatsActivity"
            android:screenOrientation="portrait" 
            android:windowSoftInputMode="stateHidden">
        </activity>
        
        <activity
            android:name="com.kreyos.watch.WatchAlarmActivity"
