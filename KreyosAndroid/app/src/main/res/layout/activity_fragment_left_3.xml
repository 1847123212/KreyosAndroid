<!-- White background -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <!-- Sports Mode icons -->
    <RelativeLayout
        android:id="@+id/layout_icons"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" >

        <!-- Divider: between icons -->
        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/bg_light_gray" >
        </RelativeLayout>

        <!-- Running Icon -->
        <ImageView
            android:id="@+id/img_ic_mode_running"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/description"
            android:src="@drawable/frag3_img_running_active"/>

        <!-- Cycling Icon -->
        <ImageView
            android:id="@+id/img_ic_mode_cycling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/description"
            android:src="@drawable/frag3_img_cycling_active" />
    </RelativeLayout>

    <!-- Timer -->
     <RelativeLayout
        android:id="@+id/layout_timer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/layout_icons"
        android:background="@color/bg_light_gray" >

        <TextView
            android:id="@+id/textView_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/fragmentL3_text_timer"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="90sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- GRID A: Heart Rate & Distance -->
    <RelativeLayout
        android:id="@+id/layout_gridA"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_timer"
        android:background="@drawable/frag3_img_sports_mode_boxes"
        android:visibility="visible" >

        <!-- 1 Heart Rate -->
        <RelativeLayout
            android:id="@+id/layout_grid_item1"
            android:layout_width="180dp"
            android:layout_height="210dp"
            android:layout_alignParentTop="true" >

            <!-- TRASH -->
            <ImageView
                android:id="@+id/image_btnTrash"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:onClick="removeGrid"
                android:contentDescription="@string/description"
                android:src="@drawable/frag3_img_ic_trash" />

            <!-- REFRESH -->
            <ImageView
                android:id="@+id/image_btnRefresh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/image_btnTrash"
                android:layout_marginLeft="10dp"
                android:onClick="changeValue"
                android:contentDescription="@string/description"
                android:src="@drawable/frag3_img_ic_refresh" />

            <!-- Title -->
            <TextView
                android:id="@+id/text_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/image_btnTrash"
                android:text="@string/fragmentL3_label_heartrate"
                android:textStyle="bold" />

            <!-- Value -->
            <TextView
                android:id="@+id/text_item_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/text_item_title"
                android:layout_below="@+id/text_item_title"
                android:text="@string/fragmentL3_text_defval"
                android:textSize="35sp"
                android:textStyle="bold" />

            <!-- Unit -->
            <TextView
                android:id="@+id/text_item_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/text_item_value"
                android:text="@string/fragmentL3_text_unit_heartrate" />
        </RelativeLayout>

        <!-- 2 Distance -->
        <RelativeLayout
            android:id="@+id/layout_gridA_item2"
            android:layout_width="180dp"
            android:layout_height="210dp"
            android:layout_toRightOf="@id/layout_grid_item1"
            android:visibility="visible" >

            <ImageView
