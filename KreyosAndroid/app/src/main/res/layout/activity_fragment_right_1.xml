<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:scaleType="fitXY" >

    <!-- 'Connect Device' button -->
    <Button
        android:id="@+id/btn_connect_device"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_customstate_blue"
        android:text="@string/fragmentR1_btn_connect_device"
        android:textColor="@color/text_white"
        android:textSize="18sp" />

    <!-- 'Connected: <device>' message -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_connect_device"
        android:layout_margin="30dp" >

        <TextView
            android:id="@+id/txt_watch_connected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/fragmentR1_msg_connected_device"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

</RelativeLayout>
