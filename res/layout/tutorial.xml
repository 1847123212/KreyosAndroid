<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tutorial_bg" >

    <HorizontalScrollView
        android:id="@+id/tutorial_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
             
            <!--  Slider 1 -->

            <RelativeLayout
                android:id="@+id/tutorial_slider_item1"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/tutorial_bottom_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true" >

                    <TextView
                        android:id="@+id/txt_skip_tutorial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="SKIP"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="5" >

                    <ImageView
                        android:id="@+id/tutorial_header_slide_1"
                        android:layout_width="170dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:src="@drawable/tutorial_turn_your_meteor_on" />

                    <ImageView
                        android:id="@+id/tutorial_body_slide_1"
                        android:layout_width="268dp"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:src="@drawable/tutorial_turn_your_meteor_on_body" />

                    <ImageView
                        android:id="@+id/tutorial_turn_on_graphics_slide_1"
                        android:layout_width="152dp"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:src="@drawable/tutorial_turn_your_meteor_on_graphics" />

                </LinearLayout>

                <Button
                    android:id="@+id/tutorial_btn_next"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_above="@id/tutorial_bottom_margin"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/tutorial_next_button"
                    android:onClick="moveToNext"
                    android:textColor="@color/white" />

            </RelativeLayout>
            
              Slider 2  

            <RelativeLayout
                android:id="@+id/tutorial_slider_item2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/tutorial_bottom_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true" >
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="5" >

                    <ImageView
                        android:id="@+id/tutorial_header_slide_2"
                        android:layout_width="170dp"
                        android:layout_height="0dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="0.6"
                        android:src="@drawable/tutorial_pairing_your_meteor" />

                    <ImageView
                        android:id="@+id/tutorial_body_slide_2"
                        android:layout_width="297dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/tutorial_pairing_your_meteor_body" />

                    <ProgressBar
                        android:id="@+id/tutorial_progress"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2" >

                        <ImageView
                            android:id="@+id/tutorial_pairing_your_meteor_graphictext"
                            android:layout_width="99dp"
                            android:layout_height="47dp"
                            android:layout_marginBottom="150dp"
                            android:layout_marginLeft="50dp"
                            android:src="@drawable/tutorial_pairing_your_meteor_graphictext" />

                        <ImageView
                            android:id="@+id/tutorial_pairing_your_meteor_bluebar"
                            android:layout_width="59dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="50dp"
                            android:src="@drawable/tutorial_pairing_your_meteor_bluebar" />

                        <ImageView
                            android:id="@+id/tutorial_turn_on_graphics"
                            android:layout_width="112dp"
                            android:layout_height="140dp"
                            android:layout_marginBottom="79dp"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/tutorial_pairing_your_meteor_graphics" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            
              Slider 3 

            <RelativeLayout
                android:id="@+id/tutorial_slider_item3"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/tutorial_bottom_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true" >
                </RelativeLayout>

                <Button
                    android:id="@+id/tutorial_btn_next"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_above="@id/tutorial_bottom_margin"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/tutorial_next_button"
                    android:onClick="moveToNext"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="5" >

                    <ImageView
                        android:id="@+id/tutorial_header_slide_3"
                        android:layout_width="170dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:src="@drawable/tutorial_pairing_your_meteor" />

                    <ImageView
                        android:id="@+id/tutorial_body_slide_3"
                        android:layout_width="266dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/tutorial_pairing_your_meteor_paired" />

                    <ImageView
                        android:id="@+id/tutorial_turn_on_graphics_slide_3"
                        android:layout_width="172dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.3"
                        android:src="@drawable/tutorial_pairing_connected_graphic" />

                </LinearLayout>
            </RelativeLayout>
            
              Slider 4 

            <RelativeLayout
                android:id="@+id/tutorial_slider_item4"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tutorial_bg"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/tutorial_bottom_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true" >
                </RelativeLayout>

                <Button
                    android:id="@+id/tutorial_btn_next"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_above="@id/tutorial_bottom_margin"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/tutorial_next_button"
                    android:onClick="moveToNext"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="5" >

                    <ImageView
                        android:id="@+id/tutorial_header_slide_4"
                        android:layout_width="170dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:src="@drawable/tutorial_software_update" />

                    <ImageView
                        android:id="@+id/tutorial_body_slide_4"
                        android:layout_width="242dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/tutorial_software_update_body" />

                    <ProgressBar
                        android:id="@+id/tutorial_progress"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="50dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txt_checking_update"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="CHECKING FOR UPDATES..."
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/white" />

                </LinearLayout>
            </RelativeLayout>
            
              Slider 5  

            <RelativeLayout
                android:id="@+id/tutorial_slider_item5"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tutorial_bg"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="5" >

                    <ImageView
                        android:id="@+id/tutorial_header_slide_5"
                        android:layout_width="170dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:src="@drawable/tutorial_software_update" />

                    <ImageView
                        android:id="@+id/tutorial_body_slide_5"
                        android:layout_width="282dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/tutorial_software_update_body2" />

                    <ImageView
                        android:id="@+id/tutorial_turn_on_graphics_slide_5"
                        android:layout_width="160dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/tutorial_software_update_pairing_meteor" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:weightSum="9" >

                        <ImageView
                            android:id="@+id/tutorial_kreyos_update"
                            android:layout_width="26dp"
                            android:layout_height="37dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/tutorial_kreyos_update" />

                        <ImageView
                            android:id="@+id/tutorial_loader_on1"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/tutorial_loader_on" />

                        <ImageView
                            android:id="@+id/tutorial_loader_on2"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/tutorial_loader_on" />

                        <ImageView
                            android:id="@+id/tutorial_loader_on3"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/tutorial_loader_on" />

                        <ImageView
                            android:id="@+id/tutorial_loader_on4"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/tutorial_loader_on" />

                        <ImageView
                            android:id="@+id/tutorial_loader_on5"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/tutorial_loader_on" />

                        <ImageView
                            android:id="@+id/tutorial_loader_on6"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/tutorial_loader_on" />

                        <ImageView
                            android:id="@+id/tutorial_loader_on7"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/tutorial_loader_on" />

                        <ImageView
                            android:id="@+id/tutorial_watch"
                            android:layout_width="69dp"
                            android:layout_height="86dp"
                            android:src="@drawable/tutorial_watch" />

                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/tutorial_bottom_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true" >
                </RelativeLayout>

                <Button
                    android:id="@+id/tutorial_btn_next"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_above="@id/tutorial_bottom_margin"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/tutorial_next_button"
                    android:onClick="moveToNext"
                    android:textColor="@color/white" />
            </RelativeLayout>
            
             <!--  Slider 6   -->

            <RelativeLayout
                android:id="@+id/tutorial_slider_item6"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tutorial_bg"
                android:visibility="visible" >

                <RelativeLayout
                    android:id="@+id/tutorial_bottom_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true" >
                </RelativeLayout>

                <Button
                    android:id="@+id/tutorial_btn_next"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_above="@id/tutorial_bottom_margin"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/tutorial_next_button"
                    android:onClick="moveToNext"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="5" >

                    <ImageView
                        android:id="@+id/tutorial_header_slide_6"
                        android:layout_width="170dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:src="@drawable/tutorial_software_update" />

                    <ImageView
                        android:id="@+id/tutorial_body_slide_6"
                        android:layout_width="127dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/tutorial_software_update_completer" />

                    <ImageView
                        android:id="@+id/tutorial_turn_on_graphics_slide_6"
                        android:layout_width="138dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1.3"
                        android:src="@drawable/tutorial_software_update_icon" />

                    <ImageView
                        android:id="@+id/imageView1_slide_6"
                        android:layout_width="271dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/tutorial_software_update_congratulation" />

                </LinearLayout>
            </RelativeLayout>
            
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
