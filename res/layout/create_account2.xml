<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbg" >

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:src="@drawable/logo_kreyos_white" />

        <LinearLayout
            android:id="@+id/layout_login_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_logo"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/create_account_firstname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="FIRST NAME"
                android:paddingLeft="5dp" >

                <requestFocus />
            </EditText>

             <EditText
                 android:id="@+id/create_account_lastname"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:background="@color/white"
                 android:ems="10"
                 android:hint="LAST NAME"
                 android:paddingLeft="5dp" >

            </EditText>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_login_fields_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_login_fields"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="BIRTHDAY:"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/create_account_birthday_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_corner_white"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="MM/DD/YYYY"
                        android:textColor="@color/lightgray"
                        android:textSize="25dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="GENDER:"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/create_account_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_right_rounded_border_white"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="FEMALE"
                        android:textColor="@color/lightgray"
                        android:textSize="25dp" />
                    
                    <TextView
                        android:id="@+id/create_account_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/create_account_female"
                        android:background="@drawable/bg_left_rounded_border_white"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="MALE"
                        android:textColor="@color/lightgray"
                        android:textSize="25dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="HEIGHT"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/create_account_height_value_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_right_rounded_border_white"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="O In."
                        android:textColor="@color/lightgray"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/create_account_height_value_ft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/create_account_height_value_in"
                        android:background="@drawable/bg_left_rounded_border_white"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="0 Ft."
                        android:textColor="@color/lightgray"
                        android:textSize="25dp" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="WEIGHT"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/create_account_weight_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_corner_white"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="0 Lbs."
                        android:textColor="@color/lightgray"
                        android:textSize="25dp" />

                </RelativeLayout>
                
            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/create_account_btn_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_login_fields_2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sign_up_button"
            android:text="DONE"
            android:textColor="@color/white" />
		
		
		<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/createidbar" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="#2D4F54" >

                    <TextView
                        android:id="@+id/txt_create_account_icon"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/kreyosid"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:background="#4F929A" >

                    <TextView
                        android:id="@+id/txt_create_account_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:text="ALREADY HAVE A KREYOS ID?\nLOGIN HERE"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        
        
